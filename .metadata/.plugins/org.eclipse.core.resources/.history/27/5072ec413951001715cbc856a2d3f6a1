app.controller('JobController', [ 'JobService', '$http', '$scope',
		'$location','$rootScope', function(BlogService, $http, $scope, $location,$rootScope) {
	
	     var self=this;
	     
	     

			self.createJob = function() {
				
				console.log("Job controller called");
				//console.log(self.blog.guest);
				BlogService.addJob(self.job).then(function(response) {
					self.blog = response.data;
					$location.path('/home');
				}, function(error) {
					console.log(error);
				});
			}
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
    }
])
