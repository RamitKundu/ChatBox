
app.controller('BlogController',[
	'BlogService',
	'$http',
	'$scope',
	'$location',
	function(BlogService, $http, $scope, $location){
		var self=this;
		self.blog={};
		self.bloglist=[];
		

		self.createBlog=function(){
			console.log("Blog controller called");
			BlogService.addBlog(self.blog).then(
			function(response){
				self.blog=response.data;
				$location.path('/home');
			},function(error) {
				console.log(error);		
			});
		}


		self.getBlogList=function(){
			console.log("BlogList controller called");
			BlogService.listBlog().then(
			function(response){
				console.log(response.data);
				self.bloglist=response.data;
				$location.path('/getallblogs');
			},function(error) {
				console.log(error);		
			});
		}

		
		
		
		
	
		
		
		
		
		
		
		
		
		
		
		
	}
	
	
	
])