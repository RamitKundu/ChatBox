
app.controller('BlogController',[
	'BlogService',
	'$http',
	'$scope',
	'$location',
	function(BlogService, $http, $scope, $location){
		var self=this;
		self.blog={};
		

		self.createBlog=function(){
			
			BlogService.addBlog(self.blog).then(
			function(response){
				self.blog=response.data;
				$location.path('/home');
			},function(error) {
				console.log(error);		
			});
		}

		
		
		
		
		
	
		
		
		
		
		
		
		
		
		
		
		
	}
	
	
	
])