app.controller('JobController', [ 'JobService', '$http', '$scope',
		'$location','$rootScope', function(BlogService, $http, $scope, $location,$rootScope) {
	
	     var self=this;
	     self.job={};
	     self.joblist = [];
	     

			self.createJob = function() {
				
				console.log("Job controller called");
				//console.log(self.blog.guest);
				BlogService.addJob(self.job).then(function(response) {
					self.blog = response.data;
					$location.path('/home');
				}, function(error) {
					console.log(error);
				});
			}
	
	
            self.getJobList = function() {
				
				console.log("JobList controller called");
				BlogService.listJob().then(function(response) {
					self.joblist = response.data;
					console.log(self.joblist);
					 //$location.path('/getallblogs');
//					self.allBlogs=true;
//					self.writeBlog=false;
				}, function(error) {
					console.log(error);
				});
			}
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
    }
])
