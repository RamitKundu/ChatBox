package com.niit.ChatBoxRestService.Controller;

import javax.servlet.annotation.MultipartConfig;

import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.multipart.MultipartFile;

import com.niit.ChatBoxBackEnd.Util.FileUtil;

@RestController
@MultipartConfig(fileSizeThreshold=20971520)
public class UploadController {
	
	@PostMapping("/upload")
	public void uploadFile(@RequestParam("fileName") String name,@RequestParam("uploadFile") MultipartFile file){
		
		
	FileUtil.upload(name,file);	
		
		
		
		
		
		
		
	}

}
