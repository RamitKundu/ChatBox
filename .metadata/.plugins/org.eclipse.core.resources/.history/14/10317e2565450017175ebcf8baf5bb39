@Repository
@Transactional
public class CommentDaoImpl implements CommentDao{
	
	@Autowired
	private SessionFactory sessionFactory;

	public List<Comment> getAllComments() {
		
		return sessionFactory.getCurrentSession().createQuery("from Comment").list();
	}

